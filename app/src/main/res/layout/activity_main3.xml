<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/lightyellow">


    <TextView
        android:id="@+id/flashcard_question"
        android:background="@drawable/border"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Find the odd one out: J, M, A"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:background="@drawable/secondborder"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_height="210dp"
        android:gravity="center"
        android:text="Clue: A, E, I, O, U"
        android:textSize="35sp"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/flashcard_question"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-200dp"
        android:layout_marginBottom="-60dp">

    </RelativeLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flashcard_answer"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="131dp"
        android:text="A"
        android:textColor="@color/black"
        android:backgroundTint="#fff"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/button1"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:text="J"
        android:backgroundTint="#fff"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:text="M"
        android:backgroundTint="#fff"/>
    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:text="Previous"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:backgroundTint="#fff"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:text="Next"
        android:textColor="@color/black"
        android:layout_marginLeft="290dp"
        android:backgroundTint="#fff"/>
    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:text="Show answer"
        android:textColor="@color/black"
        android:layout_marginLeft="133dp"
        android:backgroundTint="#fff"/>
</RelativeLayout>



